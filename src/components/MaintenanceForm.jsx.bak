import { useState, useEffect, useRef } from 'react';
import { Camera, Mic, CheckCircle2, X, Wrench, Factory, Zap, FileText, Plus, AlertCircle } from 'lucide-react';
import { equipmentAPI, maintenanceAPI } from '../services/api';
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from './ui/Card';
import Button from './ui/Button';
import Badge from './ui/Badge';

const MaintenanceForm = ({ userId, onSuccess, onCancel }) => {
  const [equipment, setEquipment] = useState([]);
  const [formData, setFormData] = useState({
    equipmentId: '',
    maintenanceType: 'routine',
    status: 'pending',
    priority: 'medium',
    title: '',
    description: '',
    notes: '',
    scheduledDate: '',
    setEquipmentInactive: false
  });
  const [loading, setLoading] = useState(false);
  const [selectedIssueType, setSelectedIssueType] = useState('');
  const [showSuccess, setShowSuccess] = useState(false);
  const [selectedImages, setSelectedImages] = useState([]);
  const [imagePreviews, setImagePreviews] = useState([]);
  const fileInputRef = useRef(null);

  const issueTypes = [
    { id: 'belt', label: 'สายพานขาด', icon: Wrench, desc: 'สายพานเครื่องขาด หรือหลวม' },
    { id: 'bearing', label: 'Bearing', icon: Wrench, desc: 'Bearing มีเสียงดัง หรือร้อนผิดปกติ' },
    { id: 'motor', label: 'มอเตอร์', icon: Zap, desc: 'มอเตอร์ทำงานผิดปกติ หรือไม่ทำงาน' },
    { id: 'noise', label: 'เสียงดัง', icon: AlertCircle, desc: 'เครื่องจักรมีเสียงผิดปกติ' },
    { id: 'vibration', label: 'สั่น', icon: AlertCircle, desc: 'เครื่องสั่นผิดปกติ' },
    { id: 'oil', label: 'น้ำมัน', icon: FileText, desc: 'น้ำมันรั่ว หรือต้องเติม' },
    { id: 'routine', label: 'ตรวจสอบตามรอบ', icon: CheckCircle2, desc: 'การตรวจสอบตามกำหนด' },
    { id: 'other', label: 'อื่นๆ', icon: FileText, desc: 'ปัญหาอื่นๆ' }
  ];

  useEffect(() => {
    fetchEquipment();
  }, []);

  const fetchEquipment = async () => {
    try {
      const data = await equipmentAPI.getAll();
      setEquipment(data.equipment || []);
    } catch (error) {
      console.error('Error fetching equipment:', error);
    }
  };

  const handleQuickTemplate = (issue) => {
    setSelectedIssueType(issue.id);
    setFormData(prev => ({
      ...prev,
      description: issue.desc,
      maintenanceType: issue.id
    }));
  };

  const handleSubmit = async (e) => {
    e.preventDefault();

    if (!formData.equipmentId) {
      alert('กรุณาเลือกอุปกรณ์');
      return;
    }

    if (!selectedIssueType) {
      alert('กรุณาเลือกประเภทปัญหา');
      return;
    }

    setLoading(true);
    try {
      const formDataToSend = new FormData();
      formDataToSend.append('equipmentId', formData.equipmentId);
      formDataToSend.append('userId', userId);
      formDataToSend.append('maintenanceType', selectedIssueType || formData.maintenanceType);
      formDataToSend.append('priority', formData.priority);
      formDataToSend.append('status', formData.status);
      formDataToSend.append('title', formData.title);
      formDataToSend.append('description', formData.description);
      formDataToSend.append('setEquipmentInactive', formData.setEquipmentInactive);
      if (formData.notes) formDataToSend.append('notes', formData.notes);
      if (formData.scheduledDate) formDataToSend.append('scheduledDate', formData.scheduledDate);

      // Add images if selected
      if (selectedImages.length > 0) {
        selectedImages.forEach(image => {
          formDataToSend.append('images', image);
        });
      }

      await maintenanceAPI.create(formDataToSend);

      setShowSuccess(true);
      setTimeout(() => setShowSuccess(false), 3000);

      setFormData({
        equipmentId: '',
        maintenanceType: 'routine',
        status: 'pending',
        priority: 'medium',
        title: '',
        description: '',
        notes: '',
        scheduledDate: '',
        setEquipmentInactive: false
      });
      setSelectedIssueType('');
      setSelectedImages([]);
      setImagePreviews([]);

      setTimeout(() => {
        if (onSuccess) onSuccess();
      }, 1500);
    } catch (error) {
      console.error('Error creating maintenance record:', error);
      alert('เกิดข้อผิดพลาดในการบันทึกข้อมูล');
    } finally {
      setLoading(false);
    }
  };

  const handleChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({
      ...prev,
      [name]: value
    }));
  };

  const handleImageSelect = (e) => {
    const files = Array.from(e.target.files);
    if (files.length > 0) {
      // Limit to 5 images
      const remainingSlots = 5 - selectedImages.length;
      const filesToAdd = files.slice(0, remainingSlots);

      if (files.length > remainingSlots) {
        alert('อัปโหลดรูปภาพได้สูงสุด 5 รูป');
      }

      filesToAdd.forEach(file => {
        if (file.size > 10 * 1024 * 1024) {
          alert(`ไฟล์ ${file.name} มีขนาดเกิน 10MB`);
          return;
        }
        if (!file.type.startsWith('image/')) return;

        setSelectedImages(prev => [...prev, file]);
        const reader = new FileReader();
        reader.onloadend = () => {
          setImagePreviews(prev => [...prev, reader.result]);
        };
        reader.readAsDataURL(file);
      });
    }
  };

  const handleRemoveImage = (index) => {
    setSelectedImages(prev => prev.filter((_, i) => i !== index));
    setImagePreviews(prev => prev.filter((_, i) => i !== index));
    if (fileInputRef.current) {
      fileInputRef.current.value = '';
    }
  };

  return (
    <div className="fixed inset-0 z-[100] flex items-center justify-center p-0 sm:p-4 animate-in fade-in duration-300">
      {/* Backdrop */}
      <div
        className="absolute inset-0 bg-black/85 backdrop-blur-md"
        onClick={onCancel}
      />

      {/* Modal Container */}
      <Card className="relative w-full max-w-2xl h-full sm:h-auto sm:max-h-[90vh] overflow-hidden border-gray-800 shadow-2xl animate-in zoom-in-95 duration-300 rounded-none sm:rounded-3xl flex flex-col">
        {/* Success Toast */}
        {showSuccess && (
          <div className="fixed top-4 right-4 z-50 bg-green-600 text-white px-6 py-4 rounded-xl shadow-2xl flex items-center gap-3 animate-in slide-in-from-top-full duration-300">
            <CheckCircle2 size={24} />
            <div>
              <p className="font-bold">บันทึกสำเร็จ!</p>
              <p className="text-sm opacity-90">ระบบได้บันทึกข้อมูลเรียบร้อยแล้ว</p>
            </div>
          </div>
        )}

        <CardHeader className="bg-gradient-to-r from-green-600 to-green-500 text-white py-3 px-5 relative shrink-0">
          <div className="flex items-center gap-3">
            <div className="bg-white/20 p-2 rounded-xl backdrop-blur-sm shadow-inner">
              <Wrench className="w-5 h-5" />
            </div>
            <div>
              <CardTitle className="text-lg font-black leading-tight">Maintenance Report</CardTitle>
              <CardDescription className="text-green-100 font-bold uppercase text-[9px] tracking-widest leading-none mt-0.5">แจ้งซ่อมบำรุง / ตรวจเช็คเครื่องจักร</CardDescription>
            </div>
          </div>

          {/* Close Button */}
          <button
            onClick={onCancel}
            className="absolute top-1/2 -translate-y-1/2 right-4 p-2 rounded-xl bg-white/10 hover:bg-white/20 text-white transition-all border border-white/10"
          >
            <X size={18} />
          </button>
        </CardHeader>

        <form onSubmit={handleSubmit} className="flex-1 overflow-y-auto flex flex-col">
          <CardContent className="p-5 sm:p-8 space-y-8 bg-gray-950 flex-1">
            {/* Equipment Selection */}
            <div className="space-y-2.5">
              <label className="text-xs font-bold text-gray-400 uppercase tracking-widest flex items-center gap-2 px-1">
                <Factory className="w-3.5 h-3.5 text-green-500" />
                Machine / Equipment
              </label>
              <select
                name="equipmentId"
                value={formData.equipmentId}
                onChange={handleChange}
                required
                className="w-full bg-gray-900 border border-gray-800 text-white px-4 py-3.5 rounded-xl text-sm font-medium focus:border-green-500 focus:ring-2 focus:ring-green-500/20 outline-none transition-all shadow-sm"
              >
                <option value="">-- กรุณาเลือกเครื่องจักร --</option>
                {equipment.map((item) => (
                  <option key={item.id} value={item.id}>
                    {item.equipment_name} ({item.equipment_code})
                  </option>
                ))}
              </select>
            </div>

            {/* Job Title */}
            <div className="space-y-2.5">
              <label className="text-xs font-bold text-gray-400 uppercase tracking-widest flex items-center gap-2 px-1">
                <FileText className="w-3.5 h-3.5 text-green-500" />
                ชื่องาน / Job Title *
              </label>
              <input
                type="text"
                name="title"
                value={formData.title}
                onChange={handleChange}
                required
                placeholder="ระบุชื่องานที่ต้องการแจ้งซ่อม..."
                className="w-full bg-gray-900 border border-gray-800 text-white px-4 py-3.5 rounded-xl text-sm font-medium focus:border-green-500 focus:ring-2 focus:ring-green-500/20 outline-none transition-all shadow-sm placeholder:text-gray-600"
              />
            </div>

            {/* Quick Templates */}
            <div className="space-y-3">
              <label className="text-xs font-bold text-gray-400 uppercase tracking-widest flex items-center gap-2 px-1">
                <Zap className="w-3.5 h-3.5 text-green-500" />
                Issue Category
              </label>
              <div className="grid grid-cols-2 gap-2.5">
                {issueTypes.map(issue => {
                  const Icon = issue.icon;
                  return (
                    <button
                      key={issue.id}
                      type="button"
                      onClick={() => handleQuickTemplate(issue)}
                      className={`p-3 rounded-xl border transition-all text-left flex flex-col gap-1 ${selectedIssueType === issue.id
                          ? 'bg-green-600/10 border-green-500/50 text-green-400 shadow-[0_0_15px_rgba(34,197,94,0.1)]'
                          : 'bg-gray-900 border-gray-800 text-gray-400 hover:border-gray-700 hover:bg-gray-800/50'
                        }`}
                    >
                      <Icon className={`w-4 h-4 mb-1 ${selectedIssueType === issue.id ? 'text-green-400' : 'text-gray-500'}`} />
                      <div className="font-bold text-xs">{issue.label}</div>
                      <div className="text-[10px] opacity-60 line-clamp-1">{issue.desc}</div>
                    </button>
                  );
                })}
              </div>
            </div>

            {/* Priority Selection */}
            <div className="space-y-3">
              <label className="text-xs font-bold text-gray-400 uppercase tracking-widest flex items-center gap-2 px-1">
                <AlertCircle className="w-3.5 h-3.5 text-green-500" />
                Priority / ความสำคัญ
              </label>
              <div className="grid grid-cols-2 sm:grid-cols-4 gap-2">
                {[
                  { id: 'low', label: 'ต่ำ', color: 'text-green-400', border: 'border-green-500/20', bg: 'bg-green-500/5' },
                  { id: 'medium', label: 'ปกติ', color: 'text-yellow-400', border: 'border-yellow-500/20', bg: 'bg-yellow-500/5' },
                  { id: 'high', label: 'ด่วน', color: 'text-red-400', border: 'border-red-500/20', bg: 'bg-red-500/5' },
                  { id: 'critical', label: 'วิกฤต', color: 'text-red-500', border: 'border-red-500/40', bg: 'bg-red-500/10' }
                ].map((p) => (
                  <button
                    key={p.id}
                    type="button"
                    onClick={() => setFormData({ ...formData, priority: p.id })}
                    className={`py-2.5 px-3 rounded-xl border text-sm font-bold transition-all flex flex-col items-center justify-center gap-0.5 ${formData.priority === p.id
                        ? `${p.bg} ${p.border.replace('20', '80')} ${p.color} ring-1 ${p.color.replace('text', 'ring')}/30`
                        : 'bg-gray-900 border-gray-800 text-gray-500 hover:border-gray-700'
                      }`}
                  >
                    <span className="text-[10px] opacity-60 uppercase tracking-tighter">{p.id}</span>
                    <span>{p.label}</span>
                  </button>
                ))}n              </div>
            </div>

            {/* Equipment Downtime Toggle */}
            <div className="space-y-3">
              <label className="text-xs font-bold text-gray-400 uppercase tracking-widest flex items-center gap-2 px-1">
                <AlertCircle className="w-3.5 h-3.5 text-amber-500" />
                Downtime / หยุดเครื่องจักร
              </label>
              <button
                type="button"
                onClick={() => setFormData({ ...formData, setEquipmentInactive: !formData.setEquipmentInactive })}
                className={`w-full py-4 px-4 rounded-xl border text-sm font-bold transition-all flex items-center justify-between ${
                  formData.setEquipmentInactive
                    ? 'bg-red-500/10 border-red-500/50 text-red-400'
                    : 'bg-gray-900 border-gray-800 text-gray-400 hover:border-gray-700'
                }`}
              >
                <div className="flex items-center gap-3">
                  <div className={`w-10 h-10 rounded-lg flex items-center justify-center ${
                    formData.setEquipmentInactive ? 'bg-red-500/20' : 'bg-gray-800'
                  }`}>
                    <Factory className={`w-5 h-5 ${formData.setEquipmentInactive ? 'text-red-400' : 'text-gray-500'}`} />
                  </div>
                  <div className="text-left">
                    <p className="font-bold">{formData.setEquipmentInactive ? 'หยุดเครื่องจักร' : 'เครื่องยังทำงานอยู่'}</p>
                    <p className="text-xs opacity-60">
                      {formData.setEquipmentInactive 
                        ? 'เครื่องจะถูกตั้งเป็น Inactive เพื่อคำนวณ Downtime' 
                        : 'เครื่องยังใช้งานได้ตามปกติ'
                      }
                    </p>
                  </div>
                </div>
                <div className={`w-12 h-7 rounded-full transition-all ${
                  formData.setEquipmentInactive ? 'bg-red-500' : 'bg-gray-700'
                }`}>
                  <div className={`w-5 h-5 mt-1 rounded-full bg-white shadow-md transition-all ${
                    formData.setEquipmentInactive ? 'ml-6' : 'ml-1'
                  }`} />
                </div>
              </button>
            </div>

            {/* Description */}
            <div className="space-y-3">
              <label className="text-xs font-bold text-gray-400 uppercase tracking-widest flex items-center gap-2 px-1">
                <FileText className="w-3.5 h-3.5 text-green-500" />
                Descriptions
              </label>
              <textarea
                name="description"
                value={formData.description}
                onChange={handleChange}
                className="w-full bg-gray-900 border border-gray-800 text-white p-4 rounded-xl text-sm h-28 resize-none focus:border-green-500 focus:ring-2 focus:ring-green-500/20 outline-none transition-all placeholder:text-gray-600"
                placeholder="กรอกรายละเอียดปัญหา หรือเหตุการณ์ที่พบ..."
              />
            </div>

            {/* Photo */}
            <div className="space-y-3">
              <label className="text-xs font-bold text-gray-400 uppercase tracking-widest flex items-center gap-2 px-1">
                <Camera className="w-3.5 h-3.5 text-green-500" />
                Attachments (Optional)
              </label>

              <input
                ref={fileInputRef}
                type="file"
                accept="image/*"
                multiple
                onChange={handleImageSelect}
                className="hidden"
              />

              <div className="grid grid-cols-2 sm:grid-cols-3 gap-2">
                {imagePreviews.map((preview, index) => (
                  <div key={index} className="relative group aspect-square rounded-xl overflow-hidden border border-gray-800 bg-gray-900">
                    <img src={preview} alt="Preview" className="w-full h-full object-cover" />
                    <button
                      type="button"
                      onClick={() => handleRemoveImage(index)}
                      className="absolute top-1.5 right-1.5 bg-red-600 text-white p-1 rounded-lg hover:bg-red-700 transition-all shadow-lg"
                    >
                      <X size={14} />
                    </button>
                  </div>
                ))}

                {selectedImages.length < 5 && (
                  <button
                    type="button"
                    onClick={() => fileInputRef.current?.click()}
                    className="aspect-square border-2 border-dashed border-gray-800 rounded-xl flex flex-col items-center justify-center text-gray-600 hover:border-green-500/50 hover:text-green-500 hover:bg-green-500/5 transition-all group"
                  >
                    <Plus size={24} className="mb-1 group-hover:scale-110 transition-transform" />
                    <span className="text-[10px] font-bold uppercase tracking-widest">เพิ่มรูป</span>
                  </button>
                )}
              </div>
              {selectedImages.length > 0 && (
                <p className="text-[10px] text-gray-500 font-bold uppercase tracking-wider text-center mt-2">
                  {selectedImages.length} / 5 Images Selected
                </p>
              )}
            </div>

            {/* Action Buttons */}
            <div className="pt-2 flex flex-col gap-3">
              <Button
                type="submit"
                disabled={loading || !formData.equipmentId || !formData.title || !selectedIssueType}
                className="w-full h-14 rounded-xl font-bold text-base shadow-lg shadow-green-500/20 group"
              >
                {loading ? (
                  <div className="animate-spin rounded-full h-5 w-5 border-b-2 border-white"></div>
                ) : (
                  <div className="flex items-center gap-2">
                    <CheckCircle2 className="w-5 h-5 group-hover:scale-110 transition-transform" />
                    Submit Report
                  </div>
                )}
              </Button>
              {onCancel && (
                <Button
                  type="button"
                  onClick={onCancel}
                  variant="ghost"
                  disabled={loading}
                  className="text-gray-500 font-bold uppercase tracking-widest text-[10px]"
                >
                  Cancel
                </Button>
              )}
            </div>
          </CardContent>
        </form>
      </Card>
    </div>
  );
};

export default MaintenanceForm;
